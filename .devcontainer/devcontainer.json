{
	"name": "Building Neo4j Applications with Python course",
	"image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",
	"postCreateCommand": "bash .devcontainer/post_create.sh",
	"portsAttributes": {
		"3000": {
		"label": "Application",
		"onAutoForward": "openPreview"
		}
	},
	"forwardPorts": [
		3000
		],
	"customizations": {
		"codespaces": {
			"openFiles": [
				"SETUP.md",
				".env.example"
				]
		},
		"vscode": {
			"settings": {
				"python.createEnvironment.trigger": "off"
			},
			"extensions": [
				"ms-python.python",
				"ms-python.debugpy"
				]
		}
	}
}